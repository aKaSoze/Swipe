<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/panel_choose1_hover"
    android:orientation="vertical" >

    <com.indyvision.fractal_circus.views.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="Others"
        android:textColor="#014170"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.indyvision.fractal_circus.views.custom.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/sel_btn_fb"
        android:drawablePadding="8dp"
        android:text="Share on Facebook"
        android:textColor="@color/sel_text_color_button"
        android:textSize="24sp" />

    <com.indyvision.fractal_circus.views.custom.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/sel_btn_gplus"
        android:drawablePadding="8dp"
        android:text="Share on G+"
        android:textColor="@color/sel_text_color_button"
        android:textSize="24sp" />

    <com.indyvision.fractal_circus.views.custom.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/sel_btn_buy"
        android:drawablePadding="8dp"
        android:text="NO-Ads Version"
        android:textColor="@color/sel_text_color_button"
        android:textSize="24sp" />

</LinearLayout>